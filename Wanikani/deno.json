{
    "compilerOptions": {
        "checkJs": true,
        "lib": [
            "dom",
            "dom.iterable",
            "dom.asynciterable",
            "deno.ns"
        ],
        "types": [
            "./wanikani.d.ts"
        ]
    },
    "lint": {
        "rules": {
            "tags": [
                "recommended"
            ],
            "include": [
                "no-await-in-loop",
                "default-param-last",
                "camelcase"
            ],
            "exclude": [
                "no-window",
                "no-window-prefix",
                "no-explicit-any"
            ]
        }
    },
    "fmt": {
        "useTabs": false,
        "indentWidth": 4,
        "semiColons": true,
        "spaceAround": true,
        "lineWidth": 120,
        "nextControlFlowPosition": "nextLine",
        "operatorPosition": "nextLine"
    }
}
